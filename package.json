{
  "name": "docufold",
  "displayName": "DocuFold",
  "description": "Automatically fold docstrings in your code to improve readability and focus",
  "version": "0.0.1",
  "publisher": "docufold",
  "author": {
    "name": "DocuFold Team"
  },
  "license": "MIT",
  "homepage": "https://github.com/docufold/docufold",
  "repository": {
    "type": "git",
    "url": "https://github.com/docufold/docufold.git"
  },
  "bugs": {
    "url": "https://github.com/docufold/docufold/issues"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Formatters",
    "Visualization"
  ],
  "keywords": [
    "docstring",
    "fold",
    "folding",
    "documentation",
    "python",
    "javascript",
    "typescript",
    "java",
    "csharp",
    "php",
    "code-folding",
    "readability",
    "productivity",
    "developer-tools"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "icon": "resources/icon.png",
  "activationEvents": [
    "onLanguage:python",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:java",
    "onLanguage:csharp",
    "onLanguage:php",
    "onLanguage:jsx-tags",
    "onLanguage:tsx-tags"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "docufold.toggleAutoFold",
        "title": "Toggle Auto-fold",
        "category": "DocuFold"
      },
      {
        "command": "docufold.foldAllDocstrings",
        "title": "Fold All Docstrings",
        "category": "DocuFold"
      },
      {
        "command": "docufold.unfoldAllDocstrings",
        "title": "Unfold All Docstrings",
        "category": "DocuFold"
      },
      {
        "command": "docufold.foldCurrentDocstring",
        "title": "Fold Current Docstring",
        "category": "DocuFold"
      },
      {
        "command": "docufold.unfoldCurrentDocstring",
        "title": "Unfold Current Docstring",
        "category": "DocuFold"
      }
    ],
    "keybindings": [
      {
        "command": "docufold.toggleAutoFold",
        "key": "ctrl+shift+d ctrl+shift+t",
        "mac": "cmd+shift+d cmd+shift+t"
      },
      {
        "command": "docufold.foldAllDocstrings",
        "key": "ctrl+shift+d ctrl+shift+f",
        "mac": "cmd+shift+d cmd+shift+f"
      },
      {
        "command": "docufold.unfoldAllDocstrings",
        "key": "ctrl+shift+d ctrl+shift+u",
        "mac": "cmd+shift+d cmd+shift+u"
      }
    ],
    "configuration": {
      "title": "DocuFold",
      "properties": {
        "docufold.autoFoldEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable automatic folding of docstrings when opening files"
        },
        "docufold.previewLength": {
          "type": "number",
          "default": 60,
          "minimum": 20,
          "maximum": 200,
          "description": "Maximum character length for docstring preview text"
        },
        "docufold.includePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/*.py",
            "**/*.js",
            "**/*.ts",
            "**/*.jsx",
            "**/*.tsx",
            "**/*.java",
            "**/*.cs",
            "**/*.php"
          ],
          "description": "File patterns to include for docstring folding"
        },
        "docufold.excludePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/node_modules/**",
            "**/dist/**",
            "**/build/**",
            "**/*.min.*"
          ],
          "description": "File patterns to exclude from docstring folding"
        },
        "docufold.enableStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show DocuFold status in the status bar"
        },
        "docufold.foldOnOpen": {
          "type": "boolean",
          "default": true,
          "description": "Automatically fold docstrings when opening a file"
        },
        "docufold.enableHoverPreview": {
          "type": "boolean",
          "default": true,
          "description": "Show docstring preview on hover when folded"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "glob": "^11.0.3",
    "mocha": "^11.7.0",
    "typescript": "^5.3.3"
  }
}
